@model IEnumerable<ProjManagement.Models.EmployeeModel>

@{
    ViewBag.Title = "All Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "ManagerCreateEmployee")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>

            <td>
                @Html.ActionLink("Edit", "ManagerEmployeeEdit", "Manager", new { id = item.EmployeeID }, null) |
                @Html.ActionLink("Details", "ManagerEmployeeDetails", "Manager", new { id = item.EmployeeID }, null) |
                @Html.ActionLink("Delete", "ManagerEmployeeDelete", "Manager", new { id = item.EmployeeID }, null)
            </td>
        </tr>
    }

</table>
