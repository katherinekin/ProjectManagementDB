@model IEnumerable<ProjManagement.Models.ProjAnalysisModel>

@{
    ViewBag.Title = "ProjectAnalysis";
    Layout = "~/Views/Shared/ManagerLayout.cshtml";
}

<h2>Project Analysis</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget.Estimated_Income)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget.Estimated_Expense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget.Estimated_Profit)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectID)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Pname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeCount)
        </td>
        <th>
            @Html.DisplayFor(model => item.budget.Estimated_Income)
        </th>
        <th>
            @Html.DisplayFor(model => item.budget.Estimated_Expense)
        </th>
        <th>
            @Html.DisplayFor(model => item.budget.Estimated_Profit)
        </th>
        
    </tr>
}

</table>
